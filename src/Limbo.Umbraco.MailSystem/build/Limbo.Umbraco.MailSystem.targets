<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <LimboUmbracoMailSystemContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Limbo.Umbraco.MailSystem\**\*.*</LimboUmbracoMailSystemContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyLimboUmbracoMailSystemAssets" BeforeTargets="Build">
        <ItemGroup>
            <LimboUmbracoMailSystemContentFiles Include="$(LimboUmbracoMailSystemContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Limbo.Umbraco.MailSystem files: $(LimboUmbracoMailSystemContentFilesPath) - #@(LimboUmbracoMailSystemContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(LimboUmbracoMailSystemContentFiles)"
            DestinationFiles="@(LimboUmbracoMailSystemContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.MailSystem\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearLimboUmbracoMailSystemAssets" BeforeTargets="Clean">
        <ItemGroup>
            <LimboUmbracoMailSystemDir Include="$(MSBuildProjectDirectory)\App_Plugins\Limbo.Umbraco.MailSystem\" />
        </ItemGroup>
        <Message Text="Clear old Limbo.Umbraco.MailSystem data"  Importance="high" />
        <RemoveDir Directories="@(LimboUmbracoMailSystemDir)"  />
    </Target>

</Project>
